  <div class="container">

    {{#link-to 'new-chef'}}
      <button type="button" class="btn btn-primary">Cadastrar</button>
    {{/link-to}}
    <br><br>
    <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th><b>Ativo</b></th>
        <th><b>Chefe</b></th>
        <th><b>Status</b></th>
        <th><b>Ações</b></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |chef|}}
        <tr>
          <td id="colum-disponibility">
            {{#if chef.isHere}}
              <input type="checkbox" checked={{chef.isHere}} {{action 'makeUnavaliable' chef}}>
            {{else}}
              <input type="checkbox" checked={{chef.isHere}} {{action 'makeAvaliable' chef}}>
            {{/if}}
          </td>
          <td id="colum-name">
            {{#link-to 'chef' chef.name}}
            <b>{{chef.name}}</b>
            {{/link-to}}
          </td>
          <td id="colum-status">
            {{#if chef.isHere}}
              Disponivel
            {{else}}
              Indisponivel
            {{/if}}
          </td>
          <td id="colum-options">
            {{#link-to 'edit-chef' chef.name}}
              <button type="button" class="btn btn-primary">Editar</button>
            {{/link-to}}
            <button type="button" class="btn btn-danger" {{action 'destroyItem' chef}}> Excluir</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <hr>
  <p>{{availableItemsTotal}} de {{menuLength}} chefes disponíveis</p>
  <br>
</div>
